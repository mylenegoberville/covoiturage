{% extends 'base.html.twig' %}
{% form_theme formVoiture 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello VoitureController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Ajouter une Voiture!</h1>

    {{ form_start(formVoiture) }}
        {{ form_row(formVoiture.marque) }}
        {{ form_row(formVoiture.modele) }}
        {{ form_row(formVoiture.couleur) }}
        {{ form_row(formVoiture.immatriculation) }}
        {{ form_row(formVoiture.distinction) }}


        <button type="submit" class="btn">Ajouter</button>
    {{ form_end(formVoiture) }}

</div>
{% endblock %}

